@model IEnumerable<ElectronicStore.Models.Catalog.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<h1>
    Our Catalog
</h1>
@using (Html.BeginForm())
{
    <p style="position:absolute;right:2%;top:10%">
        Searching: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Filter" />
    </p>

}
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-4">

            <h3> @Html.ActionLink(item.Name, "Details", "Catalog", new { id = item.ID, orderId = ViewBag.orderId }, null)</h3>
            Model - @item.Model<br />Price:@item.Price<br /><img style="max-width:100px" src="@Url.Content("~/" + item.Img)" />
        </div>

    }
</div>

@Html.ActionLink("Cart", "CartAction", "Orders", new { id = ViewBag.orderId}, null)
